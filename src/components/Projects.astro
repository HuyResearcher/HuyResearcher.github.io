---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, projectPage, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  
  <!-- Clickable image -->
  <div class="w-full md:w-1/2">
    <a href={projectPage} class="block">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 cursor-pointer">
        <img alt="Project preview" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
      </div>
    </a>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <!-- Clickable title -->
    <a href={projectPage}>
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors cursor-pointer">
        {title}
      </h3>
    </a>
    
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">
        {Array.isArray(description) ? (
          <ul class="list-disc pl-4">
            {description.map(item => (
              <li><strong>{item.label}:</strong> {item.value}</li>
            ))}
          </ul>
        ) : description}
      </div>
      
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-4" />
              {title === "SAP - SD & Integration Suite" ? "Github" : "Github"}
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              {title === "SAP - SD & Integration Suite" ? "DMSPro" : 
               title === "MHM - Shop Heat Map" ? "MHM" :
               title === "DraEdu - EduTech System" ? "DraEdu" :
               title === "Thai Son - Education Management" ? "Thai Son" :
               "Live Demo"}
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>


