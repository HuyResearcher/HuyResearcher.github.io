---
import LinkedIn from "./icons/LinkedIn.astro"
import Mail from "./icons/Mail.astro"
---

<div class="contact-container max-w-5xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-12">
    <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
      Ready to Work Together?
    </h3>
    <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Let's discuss your next project and bring your ideas to life
    </p>
  </div>

  <div class="grid lg:grid-cols-2 gap-12 items-start">
    <!-- Contact Methods -->
    <div class="space-y-6">
      <div class="space-y-8">
        <!-- LinkedIn -->
        <a 
          href="https://linkedin.com/in/huyhoang0603" 
          target="_blank"
          class="group flex items-start gap-6 p-6 rounded-3xl bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 shadow-sm hover:shadow-md border border-gray-100 dark:border-gray-800"
        >
          <div class="flex-shrink-0 w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <LinkedIn class="size-6 text-blue-600" />
          </div>
          <div class="flex-1 min-w-0">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1 group-hover:text-blue-600 transition-colors">
              LinkedIn
            </h4>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
              Connect professionally
            </p>
            <p class="text-sm text-blue-600 dark:text-blue-400 font-medium">
              linkedin.com/in/huyhoang0603
            </p>
          </div>
          <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <svg class="size-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </div>
        </a>

        <!-- Email -->
        <a 
          href="mailto:quochuyhqh02@gmail.com"
          class="group flex items-start gap-6 p-6 rounded-3xl bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 shadow-sm hover:shadow-md border border-gray-100 dark:border-gray-800"
        >
          <div class="flex-shrink-0 w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Mail class="size-6 text-red-600" />
          </div>
          <div class="flex-1 min-w-0">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1 group-hover:text-red-600 transition-colors">
              Email
            </h4>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
              Send me a message
            </p>
            <p class="text-sm text-red-600 dark:text-red-400 font-medium">
              quochuyhqh02@gmail.com
            </p>
          </div>
          <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <svg class="size-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </div>
        </a>

        <!-- Phone -->
        <div class="group flex items-start gap-6 p-6 rounded-3xl bg-white dark:bg-gray-900 hover:bg-gray-50 dark:hover:bg-gray-800 transition-all duration-300 shadow-sm hover:shadow-md border border-gray-100 dark:border-gray-800">
          <div class="flex-shrink-0 w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="size-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-1 group-hover:text-green-600 transition-colors">
              Phone
            </h4>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
              Call me directly
            </p>
            <p class="text-sm text-green-600 dark:text-green-400 font-medium">
              (+84) 386 078 543
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Info Card -->
    <div class="lg:sticky lg:top-8">
      <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 rounded-3xl p-8 border border-gray-200 dark:border-gray-700">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full mb-4">
            <svg class="size-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h4 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
            Let's Talk
          </h4>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            I'm available for job opportunities and exciting collaborations. Let's discuss how we can work together!
          </p>
        </div>

        <div class="space-y-4 mb-8">
          <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">Status</span>
            </div>
            <span class="text-sm text-green-600 dark:text-green-400 font-medium">Available</span>
          </div>
          
          <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">Response</span>
            </div>
            <span class="text-sm text-blue-600 dark:text-blue-400 font-medium">24 hours</span>
          </div>
          
          <div class="flex items-center justify-between p-4 bg-white dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center gap-3">
              <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">Location</span>
            </div>
            <span class="text-sm text-purple-600 dark:text-purple-400 font-medium">Ho Chi Minh City</span>
          </div>
        </div>

        <div class="text-center">
          <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">
            Preferred contact method
          </p>
          <div class="flex items-center justify-center gap-2 text-sm font-medium text-gray-700 dark:text-gray-300">
            <LinkedIn class="size-4 text-blue-400" />
            Direct message for further discussion
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-container {
    padding: 2rem 0;
  }

  /* Smooth hover transitions */
  .group {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Subtle shadow on hover */
  .group:hover {
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  /* Dark mode shadow adjustments */
  @media (prefers-color-scheme: dark) {
    .group:hover {
      box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
    }
  }

  /* Icon container hover effect */
  .group:hover .flex-shrink-0 {
    transform: scale(1.1);
  }

  /* Smooth border radius transitions */
  .rounded-3xl {
    border-radius: 1.5rem;
  }

  /* Status indicators */
  .w-2.h-2 {
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.2);
    animation: pulse-ring 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
  }

  @keyframes pulse-ring {
    0% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    }
    70% {
      box-shadow: 0 0 0 6px rgba(34, 197, 94, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
    }
  }
</style>
