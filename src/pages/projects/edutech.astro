---
import Layout from "../../layouts/Layout.astro"
import LinkButton from "../../components/LinkButton.astro"
import Link from "../../components/icons/Link.astro"
import Frappe from "../../components/icons/Frappe.astro"
import Figma from "../../components/icons/Figma.astro"
import DrawIO from "../../components/icons/DrawIO.astro"
---

<Layout
  title="DraEdu - Huy Researcher"
  description="DraEdu EduTech System - Innovative learning platform for enhanced educational experiences"
>
  <main class="px-4 py-16 min-h-screen">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto mb-16">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          DraEdu - EduTech System
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
          Innovative Learning Platform for Enhanced Educational Experiences
        </p>
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          <span class="flex items-center gap-2 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 px-4 py-2 rounded-full">
            <Frappe class="size-5" />
            Frappe Framework
          </span>
          <span class="flex items-center gap-2 bg-pink-100 dark:bg-pink-900 text-pink-800 dark:text-pink-200 px-4 py-2 rounded-full">
            <Figma class="size-5" />
            Figma Design
          </span>
          <span class="flex items-center gap-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-4 py-2 rounded-full">
            <DrawIO class="size-5" />
            Process Design
          </span>
        </div>
      </div>
      
      <!-- Project Image -->
      <div class="relative overflow-hidden rounded-2xl shadow-2xl mb-12">
        <img 
          src="/projects/Draedu.png" 
          alt="DraEdu Platform Interface"
          class="w-full h-64 md:h-96 object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
        <div class="absolute bottom-6 left-6 text-white">
          <h3 class="text-2xl font-bold mb-2">Modern Learning Platform</h3>
          <p class="text-lg opacity-90">Transforming education through technology</p>
        </div>
      </div>
    </section>

    <!-- Project Details -->
    <section class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <!-- Project Overview -->
        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Project Vision</h2>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Educational Innovation</h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              DraEdu represents a revolutionary approach to online education, designed to bridge the gap between traditional learning methods and modern digital experiences. The platform empowers both educators and students with cutting-edge tools for interactive learning.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Target Audience</h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              Designed for educational institutions, individual educators, and students seeking a comprehensive learning management system that adapts to diverse learning styles and educational methodologies.
            </p>
          </div>
        </div>

        <!-- Technical Details -->
        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Project Details</h2>
          
          <div class="space-y-4">
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6 border border-blue-200 dark:border-blue-800">
              <h4 class="font-semibold text-blue-900 dark:text-blue-200 mb-2">Development Period</h4>
              <p class="text-blue-800 dark:text-blue-300">August 2023 - October 2023</p>
            </div>
            
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800">
              <h4 class="font-semibold text-green-900 dark:text-green-200 mb-2">Team Configuration</h4>
              <ul class="text-green-800 dark:text-green-300 space-y-1">
                <li>• Total Team Size: 6 members</li>
                <li>• Agile development methodology</li>
                <li>• Cross-functional collaboration</li>
                <li>• User-centered design approach</li>
              </ul>
            </div>
            
            <div class="bg-gradient-to-r from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-purple-200 dark:border-purple-800">
              <h4 class="font-semibold text-purple-900 dark:text-purple-200 mb-2">My Dual Role</h4>
              <p class="text-purple-800 dark:text-purple-300">Business Analyst & UI/UX Designer</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Platform Features -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Platform Features</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">📚</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Interactive Lessons</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Engaging multimedia content with interactive elements, quizzes, and hands-on activities to enhance learning retention.
            </p>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">📊</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Progress Tracking</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Comprehensive analytics dashboard for students and educators to monitor learning progress and identify areas for improvement.
            </p>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">✅</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Smart Assessments</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Adaptive assessment system with various question types, automated grading, and detailed feedback mechanisms.
            </p>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">👥</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Collaborative Learning</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Virtual study groups, peer-to-peer learning, discussion forums, and collaborative project management tools.
            </p>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-red-100 dark:bg-red-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">🎯</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Personalized Learning</h3>
            <p class="text-gray-600 dark:text-gray-300">
              AI-driven recommendations and adaptive learning paths tailored to individual student needs and learning preferences.
            </p>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700 hover:transform hover:scale-105 transition-all duration-300">
            <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">📱</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Mobile Accessibility</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Fully responsive design with mobile apps, enabling learning anywhere, anytime across all devices.
            </p>
          </div>
        </div>
      </div>

      <!-- My Contributions -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">My Key Contributions</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/30 rounded-2xl p-8 border border-blue-200 dark:border-blue-800">
            <h3 class="text-2xl font-semibold text-blue-900 dark:text-blue-200 mb-6">Business Analysis</h3>
            <ul class="space-y-4 text-blue-800 dark:text-blue-300">
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>User Requirements Analysis:</strong> Conducted comprehensive stakeholder interviews with educators, students, and administrators to define platform requirements
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Market Research:</strong> Analyzed competing EdTech platforms and identified key differentiators and opportunities for innovation
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Feature Prioritization:</strong> Developed product roadmap and feature prioritization matrix based on user impact and technical feasibility
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Unit Testing:</strong> Designed and executed comprehensive test cases to ensure platform reliability and user experience quality
                </div>
              </li>
            </ul>
          </div>
          
          <div class="bg-gradient-to-br from-pink-50 to-purple-100 dark:from-pink-900/20 dark:to-purple-900/30 rounded-2xl p-8 border border-pink-200 dark:border-pink-800">
            <h3 class="text-2xl font-semibold text-pink-900 dark:text-pink-200 mb-6">UI/UX Design</h3>
            <ul class="space-y-4 text-pink-800 dark:text-pink-300">
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>User Experience Design:</strong> Created intuitive user journeys and wireframes optimized for educational workflows and learning patterns
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Interface Design:</strong> Developed comprehensive design system with consistent visual language, accessibility standards, and responsive layouts
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Prototyping:</strong> Built interactive prototypes using Figma for user testing and stakeholder validation
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></span>
                <div>
                  <strong>Usability Testing:</strong> Conducted user testing sessions with target audiences and iteratively improved design based on feedback
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Technology Stack -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Technology & Tools</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3 mb-4">
              <Frappe class="size-8" />
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Frappe Framework</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Robust Python-based framework providing comprehensive backend infrastructure for educational applications.
            </p>
            <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-1">
              <li>• Database management</li>
              <li>• User authentication</li>
              <li>• API development</li>
              <li>• Workflow automation</li>
            </ul>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3 mb-4">
              <Figma class="size-8" />
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Figma Design</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Professional design tool for creating user interfaces, prototypes, and maintaining design consistency.
            </p>
            <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-1">
              <li>• UI/UX design</li>
              <li>• Interactive prototyping</li>
              <li>• Design system creation</li>
              <li>• Collaborative design</li>
            </ul>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center gap-3 mb-4">
              <DrawIO class="size-8" />
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Process Documentation</h3>
            </div>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Comprehensive documentation and process mapping for system architecture and user workflows.
            </p>
            <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-1">
              <li>• System architecture diagrams</li>
              <li>• User journey mapping</li>
              <li>• Process flow documentation</li>
              <li>• Technical specifications</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Impact & Results -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Project Impact</h2>
        <div class="bg-gradient-to-r from-green-50 to-emerald-100 dark:from-green-900/20 dark:to-emerald-900/30 rounded-2xl p-8 border border-green-200 dark:border-green-800">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-semibold text-green-900 dark:text-green-200 mb-6">Educational Outcomes</h3>
              <ul class="space-y-3 text-green-800 dark:text-green-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Enhanced student engagement through interactive learning modules
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Improved learning outcomes with personalized education paths
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Streamlined administrative processes for educational institutions
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Accessible learning platform supporting diverse learning styles
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-green-900 dark:text-green-200 mb-6">Technical Achievements</h3>
              <ul class="space-y-3 text-green-800 dark:text-green-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Scalable architecture supporting growing user base
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Intuitive user interface with excellent usability scores
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Comprehensive testing ensuring platform reliability
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-green-600 rounded-full mt-2 flex-shrink-0"></span>
                  Cross-platform compatibility and mobile responsiveness
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- External Links -->
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Explore DraEdu</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <LinkButton href="https://draedu.vn/home">
            <Link class="size-4" />
            Visit DraEdu Platform
          </LinkButton>
          <LinkButton href="/">
            <span class="text-sm">← Back to Portfolio</span>
          </LinkButton>
        </div>
      </div>
    </section>
  </main>
</Layout>
