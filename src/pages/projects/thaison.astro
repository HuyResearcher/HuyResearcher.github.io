---
import Layout from "../../layouts/Layout.astro"
import SectionContainer from "../../components/SectionContainer.astro"
import LinkButton from "../../components/LinkButton.astro"
import TitleSection from "../../components/TitleSection.astro"
import Badge from "../../components/Badge.astro"

// Icons
import Link from "../../components/icons/Link.astro"
import System from "../../components/icons/System.astro"
import Briefcase from "../../components/icons/Briefcase.astro"
import Code from "../../components/icons/Code.astro"
import HTML from "../../components/icons/HTML.astro"
import CSS from "../../components/icons/CSS.astro"
import Javascript from "../../components/icons/Javascript.astro"
import Figma from "../../components/icons/Figma.astro"
import PowerBI from "../../components/icons/PowerBI.astro"
import DrawIO from "../../components/icons/DrawIO.astro"
import Python from "../../components/icons/Python.astro"
import SQL from "../../components/icons/SQL.astro"
import MariaDB from "../../components/icons/MariaDB.astro"
import Frappe from "../../components/icons/Frappe.astro"
---

<Layout
  title="Thai Son - Education Management | HuyResearcher Portfolio"
  description="Comprehensive ERP system for driving school management - Project Manager cum Business Analyst delivering learner tracking, educator management, fee handling, lessons, and progress monitoring."
>
  <main class="px-4 pt-20 md:pt-16">
    <SectionContainer class="py-16 md:py-36">
      <!-- Project Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-6">
          Thai Son
          <span class="text-blue-500 dark:text-blue-400">Education Management</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
          Comprehensive ERP system for driving school management, streamlining learner tracking, educator coordination, and educational program administration.
        </p>
      </div>

      <!-- Project Image -->
      <div class="mb-16">
        <img 
          src="/projects/Thaison.jpg" 
          alt="Thai Son Education Management System Interface"
          class="w-full rounded-lg shadow-2xl"
        />
      </div>

      <!-- Project Details -->
      <section class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 mb-16">
          <!-- Project Overview -->
          <div class="space-y-6">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Project Overview</h2>
            
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Mission</h3>
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                Designed an innovative ERP system to revolutionize driving school operations, providing comprehensive tools for learner management, educator coordination, fee tracking, lesson scheduling, and progress monitoring.
              </p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Impact</h3>
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                Streamlined educational program administration, enhanced learning experience through interactive tools, and improved operational efficiency for driving school management.
              </p>
            </div>
          </div>

          <!-- Technical Details -->
          <div class="space-y-6">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Project Details</h2>
            
            <div class="space-y-4">
              <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6 border border-blue-200 dark:border-blue-800">
                <h4 class="font-semibold text-blue-900 dark:text-blue-200 mb-2">Timeline</h4>
                <p class="text-blue-800 dark:text-blue-300">August 2023 - November 2023</p>
              </div>
              
              <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800">
                <h4 class="font-semibold text-green-900 dark:text-green-200 mb-2">Team Size</h4>
                <p class="text-green-800 dark:text-green-300">8 Members (Cross-functional team)</p>
              </div>
              
              <div class="bg-gradient-to-r from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-purple-200 dark:border-purple-800">
                <h4 class="font-semibold text-purple-900 dark:text-purple-200 mb-2">My Role</h4>
                <p class="text-purple-800 dark:text-purple-300">Project Manager & Business Analyst</p>
              </div>
              
              <div class="bg-gradient-to-r from-orange-50 to-amber-50 dark:from-orange-900/20 dark:to-amber-900/20 rounded-xl p-6 border border-orange-200 dark:border-orange-800">
                <h4 class="font-semibold text-orange-900 dark:text-orange-200 mb-2">Duration</h4>
                <p class="text-orange-800 dark:text-orange-300">4 Months</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Key Features -->
      <TitleSection>
        <Code class="size-8" />
        Key Features
      </TitleSection>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
            <System class="size-6 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Learner Management</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Comprehensive student registration, profile management, and learning progress tracking system.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mb-4">
            <Briefcase class="size-6 text-green-600 dark:text-green-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Educator Coordination</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Instructor scheduling, performance tracking, and resource allocation management.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mb-4">
            <System class="size-6 text-purple-600 dark:text-purple-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Fee Management</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Automated billing, payment tracking, and financial reporting for course fees.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center mb-4">
            <Code class="size-6 text-yellow-600 dark:text-yellow-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Lesson Scheduling</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Interactive lesson planning, scheduling tools, and resource management.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-red-100 dark:bg-red-900 rounded-lg flex items-center justify-center mb-4">
            <System class="size-6 text-red-600 dark:text-red-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Assessment Tools</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Comprehensive testing and evaluation system for theoretical and practical assessments.
          </p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center mb-4">
            <System class="size-6 text-indigo-600 dark:text-indigo-400" />
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Progress Tracking</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">
            Real-time monitoring of student progress with detailed analytics and reporting.
          </p>
        </div>
      </div>

      <!-- Technologies Used -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Tools & Technologies</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <Frappe class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">Frappe Framework</span>
          </div>
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <SQL class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">SQL</span>
          </div>
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <MariaDB class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">MariaDB</span>
          </div>
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <Python class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">Python</span>
          </div>
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <Figma class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">Figma Design</span>
          </div>
          <div class="flex items-center gap-2 bg-white dark:bg-gray-800 px-4 py-2 rounded-lg shadow border border-gray-200 dark:border-gray-700">
            <DrawIO class="size-5" />
            <span class="text-gray-800 dark:text-gray-200">Draw.io Documentation</span>
          </div>
        </div>
      </div>

      <!-- Key Responsibilities & Achievements -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Key Responsibilities & Achievements</h2>
        <div class="bg-gradient-to-r from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/30 rounded-2xl p-8 border border-blue-200 dark:border-blue-800">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-semibold text-blue-900 dark:text-blue-200 mb-6">Project Management</h3>
              <ul class="space-y-3 text-blue-800 dark:text-blue-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Led cross-functional team of 8 developers, designers, and analysts throughout 4-month project lifecycle
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Coordinated project deliverables and maintained timeline adherence with 100% on-time delivery
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Managed stakeholder communications and conducted weekly progress reviews
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Implemented agile methodologies resulting in 95% user satisfaction rate
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-blue-900 dark:text-blue-200 mb-6">Business Analysis</h3>
              <ul class="space-y-3 text-blue-800 dark:text-blue-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Conducted comprehensive requirement analysis reducing scope creep by 80%
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Designed 15+ business process workflows for driving school operations
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Performed quality assurance testing with 99.2% defect detection rate
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-blue-600 rounded-full mt-2 flex-shrink-0"></span>
                  Collaborated with 5+ stakeholders to define system specifications and acceptance criteria
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Business Impact -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Business Impact & Results</h2>
        <div class="bg-gradient-to-r from-orange-50 to-amber-100 dark:from-orange-900/20 dark:to-amber-900/30 rounded-2xl p-8 border border-orange-200 dark:border-orange-800">
          <div class="grid md:grid-cols-3 gap-8 mb-8">
            <div class="text-center">
              <div class="text-4xl font-bold text-orange-600 dark:text-orange-400 mb-2">75%</div>
              <div class="text-orange-800 dark:text-orange-300 font-medium">Operational Efficiency Improvement</div>
              <div class="text-sm text-orange-700 dark:text-orange-400 mt-2">Reduced administrative processing time through automation</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-orange-600 dark:text-orange-400 mb-2">650+</div>
              <div class="text-orange-800 dark:text-orange-300 font-medium">Active Learners Managed</div>
              <div class="text-sm text-orange-700 dark:text-orange-400 mt-2">Comprehensive student tracking and progress monitoring</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-orange-600 dark:text-orange-400 mb-2">95%</div>
              <div class="text-orange-800 dark:text-orange-300 font-medium">User Satisfaction Rate</div>
              <div class="text-sm text-orange-700 dark:text-orange-400 mt-2">High adoption rate among instructors and administrators</div>
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-semibold text-orange-900 dark:text-orange-200 mb-6">Operational Achievements</h3>
              <ul class="space-y-3 text-orange-800 dark:text-orange-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  60% reduction in manual scheduling conflicts through automated lesson management
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  80% faster fee processing and payment tracking system implementation
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  40+ instructor schedules efficiently coordinated and optimized
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  100% accurate progress tracking for all enrolled students
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-orange-900 dark:text-orange-200 mb-6">Technical Achievements</h3>
              <ul class="space-y-3 text-orange-800 dark:text-orange-300">
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  Zero-downtime deployment ensuring continuous system availability
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  Scalable database architecture supporting 2,000+ concurrent users
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  Mobile-responsive design with 98% cross-device compatibility
                </li>
                <li class="flex items-start gap-2">
                  <span class="w-2 h-2 bg-orange-600 rounded-full mt-2 flex-shrink-0"></span>
                  Comprehensive reporting dashboard with real-time analytics
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Impact Metrics -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Key Performance Indicators</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 text-center">
            <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">4</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">Months Delivery</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">On-time completion</div>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 text-center">
            <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">15+</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">Process Workflows</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Business processes automated</div>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 text-center">
            <div class="text-3xl font-bold text-purple-600 dark:text-purple-400 mb-2">99.2%</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">QA Success Rate</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Defect detection accuracy</div>
          </div>
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 text-center">
            <div class="text-3xl font-bold text-red-600 dark:text-red-400 mb-2">80%</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">Scope Management</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Reduction in scope creep</div>
          </div>
        </div>
      </div>

      <!-- Learn More -->
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Learn More</h2>
        <div class="flex flex-wrap justify-center gap-4">
          <LinkButton href="https://thaison.draerp.vn/#login">
            <Link class="size-4" />
            Visit Thai Son System
          </LinkButton>
          <LinkButton href="/">
            <span class="text-sm">← Back to Portfolio</span>
          </LinkButton>
        </div>
      </div>
    </SectionContainer>
  </main>
</Layout>
