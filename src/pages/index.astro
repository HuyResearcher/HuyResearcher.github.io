---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import Skills from "@/components/Skills.astro"
import Contact from "@/components/Contact.astro"
import FAQ from "@/components/FAQ.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import System from "@/components/icons/System.astro"
import Mail from "@/components/icons/Mail.astro"
import Document from "@/components/icons/Document.astro"
---

<Layout
  title="Huy Researcher"
  description="Get to know Cris, Business Analyst."
>
  <main class="px-4">
    <SectionContainer class="p-0">
      <div style="min-height: 100vh; display: flex; flex-direction: column; justify-content: center; position: relative;">
        <div style="flex: 1; display: flex; align-items: center;">
          <Hero />
        </div>
        <div style="margin-top: 0.1rem;">
        </div>
      </div>
    </SectionContainer>
    <div class="space-y-24">
      <SectionContainer id="About me">
        <TitleSection>
          <ProfileCheck class="size-8" />
          About me
        </TitleSection>
        <AboutMe />
      </SectionContainer>
      
      <SectionContainer id="Experience">
        <TitleSection>
          <Briefcase class="size-8" />
          Experience
        </TitleSection>
        <Experience />
      </SectionContainer>

      <SectionContainer id="Skills">
        <TitleSection>
          <System class="size-8" />
          Skills
        </TitleSection>
        <Skills />
      </SectionContainer>

      <SectionContainer id="Project">
        <TitleSection>
          <CodeIcon class="size-7" />
          Project
        </TitleSection>
        <Projects />
      </SectionContainer>

      <SectionContainer id="Contact">
        <TitleSection>
          <Mail class="size-8" />
          Contact
        </TitleSection>
        <Contact />
      </SectionContainer>

      <SectionContainer id="FAQ">
        <TitleSection>
          <Document class="size-8" />
          FAQ
        </TitleSection>
        <FAQ />
      </SectionContainer>
      <!-- Music Bubble -->
      <div id="music-bubble" style="position: fixed; bottom: 32px; right: 32px; z-index: 50;">
        <button id="music-bubble-btn" style="background: #fff; border-radius: 50%; box-shadow: 0 2px 8px rgba(0,0,0,0.15); width: 56px; height: 56px; display: flex; align-items: center; justify-content: center; border: none; cursor: pointer;">
          <span style="font-size: 2rem;">ðŸŽµ</span>
        </button>
        <div id="music-bubble-player" style="visibility: hidden; opacity: 0; position: absolute; bottom: 70px; right: 0; transition: opacity 0.3s; width: 400px;">
          <iframe
            data-testid="embed-iframe"
            style="border-radius:12px; width:400px; height:152px;"
            src="https://open.spotify.com/embed/album/7pcBXbl1g198PNAxt44bHQ?utm_source=generator&theme=0"
            frameborder="0"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
          ></iframe>
        </div>
      </div>
      <script>
        if (typeof window !== 'undefined') {
          window.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('music-bubble-btn');
            const player = document.getElementById('music-bubble-player');
            let visible = false;
            if (btn && player) {
              btn.addEventListener('click', () => {
                visible = !visible;
                if (visible) {
                  player.style.visibility = 'visible';
                  player.style.opacity = '1';
                } else {
                  player.style.visibility = 'hidden';
                  player.style.opacity = '0';
                }
              });
            }
          });
        }
      </script>
    </div>
  </main>
</Layout>
