---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import Skills from "@/components/Skills.astro"
import Contact from "@/components/Contact.astro"
import FAQ from "@/components/FAQ.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import System from "@/components/icons/System.astro"
import Mail from "@/components/icons/Mail.astro"
import Document from "@/components/icons/Document.astro"
---

<Layout
  title="Huy Researcher"
  description="Get to know Cris, Business Analyst."
>
  <main class="px-4">
    <SectionContainer class="p-0">
      <div style="min-height: 100vh; display: flex; flex-direction: column; justify-content: center; position: relative;">
        <div style="flex: 1; display: flex; align-items: center;">
          <Hero />
        </div>
        <div style="margin-top: 0.1rem;">
        </div>
      </div>
    </SectionContainer>
    <div class="space-y-24">
      <SectionContainer id="About me">
        <TitleSection>
          <ProfileCheck class="size-8" />
          About me
        </TitleSection>
        <AboutMe />
      </SectionContainer>
      
      <SectionContainer id="Experience">
        <TitleSection>
          <Briefcase class="size-8" />
          Experience
        </TitleSection>
        <Experience />
      </SectionContainer>

      <SectionContainer id="Skills">
        <TitleSection>
          <System class="size-8" />
          Skills
        </TitleSection>
        <Skills />
      </SectionContainer>

      <SectionContainer id="Project">
        <TitleSection>
          <CodeIcon class="size-7" />
          Project
        </TitleSection>
        <Projects />
      </SectionContainer>

      <SectionContainer id="Contact">
        <TitleSection>
          <Mail class="size-8" />
          Contact
        </TitleSection>
        <Contact />
      </SectionContainer>

      <SectionContainer id="FAQ">
        <TitleSection>
          <Document class="size-8" />
          FAQ
        </TitleSection>
        <FAQ />
      </SectionContainer>
      <!-- Music Bubble -->
      <div id="music-bubble" class="fixed bottom-8 right-8 z-50">
        <button 
          id="music-bubble-btn" 
          class="bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 
                 rounded-full shadow-lg dark:shadow-gray-900/30 
                 w-14 h-14 flex items-center justify-center 
                 border-none cursor-pointer transition-all duration-300
                 backdrop-blur-sm border border-gray-200 dark:border-gray-600"
        >
          <span class="text-2xl filter grayscale-0 dark:filter-none">ðŸŽµ</span>
        </button>
        <div 
          id="music-bubble-player" 
          class="invisible opacity-0 absolute bottom-[70px] right-0 
                 transition-all duration-300 w-[400px]
                 bg-white/95 dark:bg-gray-800/95 backdrop-blur-md 
                 rounded-xl shadow-xl dark:shadow-gray-900/50
                 border border-gray-200/50 dark:border-gray-600/50 p-2"
        >
          <iframe
            data-testid="embed-iframe"
            class="rounded-lg w-full h-[152px]"
            src="https://open.spotify.com/embed/album/7pcBXbl1g198PNAxt44bHQ?utm_source=generator&theme=0"
            frameborder="0"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
          ></iframe>
        </div>
      </div>
      <script>
        if (typeof window !== 'undefined') {
          window.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('music-bubble-btn');
            const player = document.getElementById('music-bubble-player');
            const iframe = player?.querySelector('iframe');
            let visible = false;

            // Function to update iframe theme based on current mode
            function updateSpotifyTheme() {
              if (iframe) {
                const isDark = document.documentElement.classList.contains('dark');
                const currentSrc = iframe.src;
                const baseUrl = currentSrc.split('?')[0];
                const params = new URLSearchParams(currentSrc.split('?')[1]);
                params.set('theme', isDark ? '0' : '0'); // Spotify embed theme
                iframe.src = `${baseUrl}?${params.toString()}`;
              }
            }

            // Listen for theme changes
            const observer = new MutationObserver((mutations) => {
              mutations.forEach((mutation) => {
                if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                  updateSpotifyTheme();
                }
              });
            });

            observer.observe(document.documentElement, {
              attributes: true,
              attributeFilter: ['class']
            });

            if (btn && player) {
              btn.addEventListener('click', () => {
                visible = !visible;
                if (visible) {
                  player.classList.remove('invisible', 'opacity-0');
                  player.classList.add('visible', 'opacity-100');
                } else {
                  player.classList.remove('visible', 'opacity-100');
                  player.classList.add('invisible', 'opacity-0');
                }
              });

              // Close player when clicking outside
              document.addEventListener('click', (e) => {
                const target = e.target as Node;
                if (visible && !btn.contains(target) && !player.contains(target)) {
                  visible = false;
                  player.classList.remove('visible', 'opacity-100');
                  player.classList.add('invisible', 'opacity-0');
                }
              });
            }

            // Initial theme setup
            updateSpotifyTheme();
          });
        }
      </script>
    </div>
  </main>
</Layout>
